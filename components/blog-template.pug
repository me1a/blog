doctype html
html
      head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            meta(name='keywords' content= keywords)
            meta(name='description' content= description)
            link(rel="stylesheet", href="/static/css/highlight-one-dark.css")
            link(rel="stylesheet", href="/static/css/blog-template.css")
            title #{title ? title: 'MeiHuan`s Blog'}
            script
                 != 'window._PAGEDATA = ' + JSON.stringify(_data)
      body
        .fm
          h1.title #{title ? title : _h1}
          if(author && date)
            .info
            span 作者：#{author}
            span 日期：#{date}
        .content
          != _doc